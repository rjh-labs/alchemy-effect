{
  "name": "alchemy-effect-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/alchemy-run/alchemy"
  },
  "workspaces": {
    "catalog": {
      "@aws-sdk/credential-providers": "^3.0.0",
      "@cloudflare/vite-plugin": "^1.13.12",
      "@cloudflare/workers-types": "^4.20250805.0",
      "@effect/ai": "latest",
      "@effect/ai-anthropic": "latest",
      "@effect/ai-google": "latest",
      "@effect/ai-openai": "latest",
      "@effect/cluster": "latest",
      "@effect/cli": "latest",
      "@effect/platform-node": "latest",
      "@effect/platform": "latest",
      "@opencode-ai/sdk": "latest",
      "@types/aws-lambda": "^8.10.152",
      "@types/bun": "latest",
      "@types/node": "latest",
      "cloudflare": "^5.2.0",
      "effect": "latest",
      "distilled-aws": "^0.0.21",
      "typescript": "^5.9.3",
      "vite": "^7.1.9",
      "wrangler": "^4.42.2"
    },
    "packages": [
      "alchemy-effect",
      "examples/*"
    ]
  },
  "type": "module",
  "module": "./lib/index.js",
  "scripts": {
    "build:clean": "bun clean . && bun i && bun run build && bun download:env",
    "build": "bun run clean:shallow && bun tsc -b && bun run --filter alchemy-effect build",
    "bump": "bun ./scripts/bump.ts",
    "clean": "git clean -fqdx -e .env",
    "clean:shallow": "rm -rf alchemy-effect/*.tgz && bun tsc -b --clean",
    "dev": "tsc -w & bun run --filter alchemy-effect dev",
    "download:cfn": "bun scripts/generate-cfn-docs.ts",
    "download:terraform": "./scripts/clone-external",
    "generate:docs": "bun scripts/generate-docs.ts",
    "download:env": "doppler secrets download --no-file --format env > .env",
    "download:external": "bun download:env && bun download:cfn && bun download:terraform",
    "format:check": "bun run format -- --check",
    "format": "oxfmt '.' '!./alchemy-effect*/lib/' '!/**/*.mdx'",
    "install:clean": "bun clean . && bun i",
    "opencode": "OPENCODE_EXPERIMENTAL_OXFMT=true opencode",
    "setup": "effect-language-service patch && bun run download:external",
    "publish:npm": "bun run build && bun run --filter alchemy-effect publish:npm",
    "test:benchmark": "bun run --filter alchemy-effect test:benchmark",
    "test:fast": "FAST=1 bun run test:live",
    "test:local": "LOCAL=1 bun ./scripts/test.ts",
    "test:live": "bun ./scripts/test.ts",
    "test": "bun run test:live"
  },
  "devDependencies": {
    "@ark/attest": "^0.55.0",
    "@effect/language-service": "^0.55.5",
    "@types/bun": "latest",
    "@types/node": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20251208.1",
    "bun-types": "^1.3.5",
    "changelogithub": "^13.16.1",
    "dotenv": "^17.2.3",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.35.0",
    "pkg-pr-new": "^0.0.60",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "distilled-aws": "0.0.21"
  }
}