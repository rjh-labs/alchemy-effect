{
  "extends": "../tsconfig.base.json",
  "include": ["package.json", "src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    // ink
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "lib": ["DOM", "DOM.Iterable", "ES2023"]
  }
}
