{
  "extends": "../tsconfig.base.json",
  "include": ["package.json", "src", "test"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "outDir": "./lib",
    "rootDir": ".",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    // ink
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ES2023"]
  }
}
